<%- include('../partials/header') %>

    <h2>Edit Supplier</h2>
    <form action="/suppliers/<%= supplier._id %>?_method=PUT" method="POST" class="mt-3">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input required name="name" value="<%= supplier.name %>" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Address</label>
            <input name="address" value="<%= supplier.address %>" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Phone</label>
            <input name="phone" value="<%= supplier.phone %>" class="form-control" />
        </div>
        <button class="btn btn-primary">Update</button>
        <a href="/suppliers" class="btn btn-secondary">Cancel</a>
    </form>

    <%- include('../partials/footer') %>