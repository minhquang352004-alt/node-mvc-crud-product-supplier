<%- include('../partials/header') %>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Suppliers</h2>
        <a href="/suppliers/new" class="btn btn-success">New Supplier</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% suppliers.forEach(s => { %>
                <tr>
                    <td>
                        <%= s.name %>
                    </td>
                    <td>
                        <%= s.address || '-' %>
                    </td>
                    <td>
                        <%= s.phone || '-' %>
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/suppliers/<%= s._id %>/edit">Edit</a>
                        <form method="POST" action="/suppliers/<%= s._id %>?_method=DELETE" style="display:inline-block">
                            <button onclick="return confirm('Delete?')" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <%- include('../partials/footer') %>